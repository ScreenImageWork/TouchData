<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/centerHintToastBk"
    android:minWidth="@dimen/centerHintToastWidth"
    android:minHeight="@dimen/centerHintToastHeight"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/hintView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/centerHintToastTextColor"
        android:textSize="@dimen/centerHintToastTextSize"
        android:text="视频会议中，你已成为协作方"
        />

</LinearLayout>

</LinearLayout>