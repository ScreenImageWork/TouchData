<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!--     android:background="#0080ff"
   android:padding="5dp" -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_gravity= "center_horizontal"
        android:background="@color/black"
        >

    <ListView
        android:id="@+id/bkColorList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/pagelist_dividerheight"
        android:layout_marginLeft="@dimen/switch_bkc_list_marginleft"
        android:layout_marginRight="@dimen/switch_bkc_list_marginright"
        android:layout_marginTop="@dimen/switch_bkc_list_margintop"
        android:layout_marginBottom="@dimen/switch_bkc_list_marginbottom"
        android:divider="@color/trasparency"
        android:background="@color/black"
        android:scrollbars="none"

    ></ListView>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line"
        android:layout_gravity="bottom"
        android:layout_marginTop="1dp"
        android:visibility="gone"
    ></View>

    </LinearLayout>
</FrameLayout>